<p id="notice"><%= notice %></p>

<h1>Listing Bets</h1>

<table>
  <thead>
    <tr>
      <th>HOme</th>
      <th>Away</th>
      <th>Home team score</th>
      <th>Away team score</th>
      <th> result home score</th>
      <th> result away score</th>
      <th>result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
    <%@game= Game.find_by_id(bet.game_id)%>
    
   
      <tr>
        <td><%= @game.home_team.name%></td>
        <td><%= @game.away_team.name%></td>
        <td><%= bet.home_team_score %></td>
        <td><%= bet.away_team_score %></td>

        <% if @game.home_team_score == -1 %>
          <td><%= "?"%></td>
        <%else%>
          <td><%= @game.home_team_score%></td>
        <%end%>

        <% if @game.away_team_score == -1 %>
          <td><%= "?"%></td>
        <%else%>
          <td><%= @game.away_team_score%></td>
        <%end%>

        
        <td><%= bet.compare_result%></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

