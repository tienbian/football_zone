
<style>
body { padding-top: 50px; }
/*#####################
Additional Styles (required)
#####################*/
#myCarousel .carousel-caption {
  left:0;
  right:0;
  bottom:0;
  text-align:left;
  padding:10px;
  background:rgba(0,0,0,0.6);
  text-shadow:none;
}

#myCarousel .list-group {
  position:absolute;
  top:0;
  right:0;
}
#myCarousel .list-group-item {
  border-radius:0px;
  cursor:pointer;
}
#myCarousel .list-group .active {
  background-color:#eee;  
}

@media (min-width: 992px) { 
  #myCarousel {padding-right:33.3333%;}
  #myCarousel .carousel-controls {display:none;}  
}
@media (max-width: 991px, max-height: 400px) { 
  .carousel-caption p,
  #myCarousel .list-group {display:none;} 
}
</style>

 
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
    
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
      
        <div class="item active">
          <%@post1 = Post.last%>  
           <%=image_tag(@post1.post_picture_url, :width =>800, :height =>800) if @post1.post_picture.present?%>
           <div class="carousel-caption">
            
            <h1><%=link_to @post1.title, post_path(@post1)%></h1>
     
            <%=@post1.description%> 
          </div>
        </div><!-- End Item -->
 
         <div class="item">
          <%@post2 = Post.order('id desc').offset(1).first%>  
           <%=image_tag(@post2.post_picture_url, :width => 800, :height =>800) if @post2.post_picture.present?%>
           <div class="carousel-caption">
            
            <h1><%=link_to @post2.title, post_path(@post2)%></h1>
     
            <%=@post2.description%> 
          </div>
        </div><!-- End Item -->
        
        <div class="item">
          <%@post3 = Post.order('id desc').offset(2).first%>  
           <%=image_tag(@post3.post_picture_url, :width => 800, :height =>800) if @post3.post_picture.present?%>
           <div class="carousel-caption">
            
            <h1><%=link_to @post3.title, post_path(@post3)%></h1>
     
            <%=@post3.description%> 
          </div>
        </div><!-- End Item -->
        
        <div class="item">
          <%@post4 = Post.order('id desc').offset(3).first%>  
           <%=image_tag(@post4.post_picture_url, :width => 800, :height =>800) if @post4.post_picture.present?%>
           <div class="carousel-caption">
            
            <h1><%=link_to @post4.title, post_path(@post4)%></h1>
     
            <%=@post4.description%> 
          </div>
        </div><!-- End Item -->
 
        <div class="item">
          <%@post5 = Post.order('id desc').offset(4).first%>  
           <%=image_tag(@post5.post_picture_url, :width => 800, :height =>800) if @post5.post_picture.present?%>
           <div class="carousel-caption">
            
            <h1><%=link_to @post5.title, post_path(@post5)%></h1>
     
            <%=@post5.description%> 
          </div>
        </div><!-- End Item -->
                
      </div><!-- End Carousel Inner -->
 
 
    <ul class="list-group col-sm-4">
      <li data-target="#myCarousel" data-slide-to="0" class="list-group-item active"><h4><%=@post1.title%></h4></li>
      <li data-target="#myCarousel" data-slide-to="1" class="list-group-item"><h4> <%=@post2.title%></h4></li>
      <li data-target="#myCarousel" data-slide-to="2" class="list-group-item"><h4><%=@post3.title%></h4></li>
      <li data-target="#myCarousel" data-slide-to="3" class="list-group-item"><h4><%=@post4.title%></h4></li>
      <li data-target="#myCarousel" data-slide-to="4" class="list-group-item"><h4><%=@post5.title%></h4></li>
      
    </ul>
    <h4><%=link_to "Read all >>", posts_path%></h4>
 
      <!-- Controls -->
      <div class="carousel-controls">
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
      </div>
 
    </div><!-- End Carousel -->
</div>

<script>  
/*#####################
Additional jQuery (required)
#####################*/
$(document).ready(function(){
    
  var clickEvent = false;
  $('#myCarousel').carousel({
    interval:   4000  
  }).on('click', '.list-group li', function() {
      clickEvent = true;
      $('.list-group li').removeClass('active');
      $(this).addClass('active');   
  }).on('slid.bs.carousel', function(e) {
    if(!clickEvent) {
      var count = $('.list-group').children().length -1;
      var current = $('.list-group li.active');
      current.removeClass('active').next().addClass('active');
      var id = parseInt(current.data('slide-to'));
      if(count == id) {
        $('.list-group li').first().addClass('active'); 
      }
    }
    clickEvent = false;
  });
})

$(window).load(function() {
    var boxheight = $('#myCarousel .carousel-inner').innerHeight();
    var itemlength = $('#myCarousel .item').length;
    var triggerheight = Math.round(boxheight/itemlength+1);
  $('#myCarousel .list-group-item').outerHeight(triggerheight);
});
</script>
 <script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
    </script>
