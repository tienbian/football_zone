<h1>Editing Game</h1>

<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :home_team_id %><br>
    <%= @game.home_team.name %>
  </div>
  <div class="field">
    <%= f.label :away_team_id %><br>
    <%= @game.away_team.name%>
  </div>
  <div class="field">
    <%= f.label :home_team_score %><br>
    <%= f.number_field :home_team_score %>
  </div>
  <div class="field">
    <%= f.label :away_team_score %><br>
    <%= f.number_field :away_team_score %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="actions">
    <%= f.submit nil,:class => 'btn btn-primary btn-md' %>
  </div>
<% end %>


<%= link_to 'Show', @game ,:class => 'btn btn-primary btn-md'%> |
