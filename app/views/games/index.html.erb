<style>
table th{
  text-align: center;
}
</style>
<br>

<%= link_to 'New Game', new_game_path,:class => 'btn btn-primary btn-md' %>

<h2 class='tableHeader'>Games of League</h2>

<table class = 'hover-table sortable centerTable'>
  <thead>
    <tr>
      <th>Date</th>
      <th>     </th>
      <th >Game</th>
      <th>Result</th>
    </tr>
  </thead>

  <tbody>
    <% @games.order("date asc").each do |game| %>
      <tr>  
        <td><%= game.date %></td>
        <td>---------</td>
        <td><%= game.home_team.name %>
          (
          <% if game.home_team_score == -1 %>
          <%= "?"%>
          <%else%>
          <%= game.home_team_score%>
          <%end%>
          ) 
          vs <%= game.away_team.name %>
          ( 
          <%if game.away_team_score == -1 %>
          <%="?"%>
          <%else%>
          <%= game.away_team_score%>
          <%end%>
          )</td>
                 
        <td><%= game.winner %></td>
        <td><%= link_to 'Show', game ,:class => 'btn btn-primary btn-md'%></td>
        <td><%= link_to 'Edit', edit_game_path(game),:class => 'btn btn-primary btn-md' %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } ,:class => 'btn btn-danger btn-md'%></td>
        <td><%=link_to 'Bet',new_bet_path(game),:class => 'btn btn-primary btn-md' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
