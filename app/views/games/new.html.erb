<h1>New Game</h1>

<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :home_team_id %><br>
    <%= f.select :home_team_id, options_for_select(@teams.collect{ |u| [u.name, u.id] }) %>
  </div>
  <div class="field">
    <%= f.label :away_team_id %><br>
    <%= f.select :away_team_id, options_for_select(@teams.collect{ |u| [u.name, u.id] }), {}, {:class=>'roundUpsize'}%>
  </div>
  <div class="field">
    <%= f.label :home_team_score %><br>
    <%= f.number_field :home_team_score , :value => "-1"%>
  </div>
  <div class="field">
    <%= f.label :away_team_score %><br>
    <%= f.number_field :away_team_score, :value => "-1"%>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', games_path %>
