<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>



<br>

<%= link_to 'New Team', new_team_path %><br>
<br>
<% @teams.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%=link_to( image_tag(idea.team_picture_url, :width => 100, :height => 70), team_path(idea), :class=>"work") if idea.team_picture.present? %>
        
        <h4><%= link_to idea.name, idea %></h4>
        <br>
        <%= link_to 'Show', idea %>
        <%= link_to 'Edit', edit_team_path(idea) %>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
<% end %>

