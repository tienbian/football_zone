<h1>Listing Competitions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th>role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |competition| %>
      <tr>
        <td><%= competition.name %></td>
        <td><%= competition.email %></td>
        <td><%= Role.find_by(id: competition.role_id).name %></td>
        <p>
        <td><%= link_to 'Edit', edit_user_path(competition) %></td>
        <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

