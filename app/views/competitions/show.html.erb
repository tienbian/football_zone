<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @competition.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @competition.description %>
</p>

<p>
  <strong>Country:</strong>
  <%= @competition.country %>
</p>
<p>
	<strong>Teams of league</strong><br>
	<% @teams.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |p| %>
      <div class="col-md-2">
        <br><br>
	<tr>
  <td><%=link_to link_to( image_tag(p.team_picture_url, :width => 100, :height => 100), team_path(p), :class=>"work") if p.team_picture.present?%></td><br>
	<td><%=link_to p.name, team_path(p.id)%></td><br>
	</tr>
  </div>
  <%end%>
  </div>
  <%end%>
</p>

