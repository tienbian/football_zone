<h1>Listing Players</h1>
<br>

<%= link_to_modal 'New Player', new_player_path,:class => 'btn btn-primary btn-md' %>
<br>
<span>
  <%= form_tag players_path, method: 'get', class: 'navbar-form pull-right', role: 'search' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], size: 30, placeholder: "PlayerSearch", class: "form-control"%>
    </div>
    <%= submit_tag 'Search', class: 'btn btn-success' %>
  <% end %> 
</span>
<br>
<% @players.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-2">
        <%=link_to_modal( image_tag(idea.picture_url, :width => 100, :height => 100), player_path(idea), :class=>"work") %>    
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %><br>
        <%= link_to 'Show', idea,:class => 'btn btn-primary btn-xs' %>
        <%= link_to 'Edit', edit_player_path(idea) ,:class => 'btn btn-primary btn-xs'%>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } ,:class => 'btn btn-danger btn-xs'%>
      </div>
    <% end %>
  </div>
  <br>
<% end %>
<%=paginate @players%>


  
